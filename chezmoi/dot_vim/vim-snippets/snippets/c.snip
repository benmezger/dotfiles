snippet if
options head
abbr if (<expr>) {..}
	if (${1:#:expr}) {
		${0:TARGET}
	}

snippet else
abbr else {..}
	else {
		${0:TARGET}
	}

snippet elseif
abbr else (<expr>) {}
	else if (${1:#:expr}) {
		${0:TARGET}
	}

snippet ifelse
options head
abbr if (expr) {..} else {..}
	if (${1:#:expr}) {
		${2:TARGET}
	} else {
		${3}
	}

snippet for
options head
abbr for (<expr>) {..}
	for (${1:i} = ${2:0}; ${3} < ${4}; $1++) {
		${0:#:TARGET}
	}

