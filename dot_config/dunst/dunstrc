[global]
    font = "Hack 6.5"
    allow_markup = yes
    format = "%a\n<b>%s</b>\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = left
    bounce_freq = 20
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "200x5-30+50"
    shrink = yes
    transparency = 0
    idle_threshold = 120
    monitor = 0
    follow = keyboard
    sticky_history = yes
    history_length = 5
    show_indicators = no
    line_height = 1
    separator_height = 2
    padding = 8
    horizontal_padding = 16
    separator_color = frame
    startup_notification = false

[frame]
    width = 1
    color = "#ebdbb2"

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the "#" and following would be interpreted as a comment.
    background = "#282828"
    foreground = "#a89984"
    timeout = 10

[urgency_normal]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 10

[urgency_critical]
