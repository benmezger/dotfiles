[SpamFilter]
[KillThreadsFilter]
[SentMailsFilter]
sent_tag = sent
[ArchiveSentMailsFilter]
[MeFilter]
me_tag = me

[Filter.0]
message = Tagging archives
query = folder:archives and not (folder:inbox or tag:archived)
tags = +archived;-inbox

[Filter.1]
message = Tagging inbox
query = folder:inbox and not tag:inbox
tags = +inbox;-archived

[Filter.2]
message = Tagging drafts
query = folder:drafts
tags = +draft;

[Filter.3]
