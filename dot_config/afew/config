tags = -inbox

[Filter.30]
message = Cleaning up 'new' tag and leaving for mails without any tag
query = tag:new
tags = -new

[MailMover]
folders = inbox archives hidden spam trash
rename = True
max_age = 15
# rules
inbox = 'tag:deleted and not tag:inbox':hidden 'tag:archived and not tag:inbox':archives 'tag:spam and not tag:inbox':spam
spam = 'not tag:spam and tag:inbox':inbox 'not tag:spam and not folder:spam':archives
archives = 'tag:inbox and not tag:archived':inbox 'tag:hidden or tag:deleted and not tag:archived':hidden 'tag:spam':spam
hidden = 'tag:archived and not tag:hidden':archives 'tag:spam':spam 'tag:inbox and not tag:hidden':inbox
trash = 'folder:trash or tag:deleted':hidden
