      background: "0x1d2021"
      foreground: "0xd5c4a1"

    cursor:
      text: "0x1d2021"
      cursor: "0xd5c4a1"

    normal:
      black: "0x1d2021"
      red: "0xfb4934"
      green: "0xb8bb26"
      yellow: "0xfabd2f"
      blue: "0x83a598"
      magenta: "0xd3869b"
      cyan: "0x8ec07c"
      white: "0xd5c4a1"

    bright:
      black: "0x665c54"
      red: "0xfb4934"
      green: "0xb8bb26"
      yellow: "0xfabd2f"
      blue: "0x83a598"
      magenta: "0xd3869b"
      cyan: "0x8ec07c"
      white: "0xfbf1c7"

