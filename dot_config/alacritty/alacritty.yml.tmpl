window:
  opacity: 0.96
  dimensions:
    columns: 0
    lines: 0

  padding:
    x: 2
    y: 2

  dynamic_padding: false
  decorations: full

  {{- if eq .chezmoi.os "darwin" }}
  startup_mode: "Fullscreen"
  {{- else }}
  startup_mode: "Windowed"
  dynamic_title: true
  {{- end }}

scrolling:
  history: 99999
  multiplier: 3

font:
  # Normal (roman) font face
  normal:
    family: Hack Nerd Font Mono
  bold:
    family: Hack Nerd Font Mono
    style: Bold
  italic:
    family: Hack Nerd Font Mono
    style: Italic

  {{- if eq .chezmoi.os "darwin" }}
  size: 12.5
  {{- else }}
  size: 9
  {{- end }}

  offset:
    x: 0
    y: 0

  glyph_offset:
    x: 0
    y: 0
  use_thin_strokes: true

debug:
  render_timer: false
  persistent_logging: true

draw_bold_text_with_bright_colors: true

schemes:
  doom-one: &doom-one
    primary:
      background: '#282c34'
      foreground: '#bbc2cf'
    cursor:
      text: CellBackground
      cursor: '#528bff'
    selection:
      text: CellForeground
      background: '#3e4451'
    normal:
      black:   '#1c1f24'
      red:     '#ff6c6b'
      green:   '#98be65'
      yellow:  '#da8548'
      blue:    '#51afef'
      magenta: '#c678dd'
      cyan:    '#5699af'
      white:   '#202328'
