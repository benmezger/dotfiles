[crypt]
cipher = aes256
hash_algo = sha256
salt = on

[data]
__passphrase__ = on
freenode_pass = {{ onepasswordRead .onepassword.freenode }}
slack_work_api_token = ""
bnc_server = {{ onepasswordRead .onepassword.bnc }}
bnc_liberachat_pass = {{ onepasswordRead .onepassword.bnc_liberachat_pass }}
bnc_freenode_pass = {{ onepasswordRead .onepassword.bnc_freenode_pass }}
bnc_oftc_pass = {{ onepasswordRead .onepassword.bnc_oftc_pass }}
bnc_darkscience_pass = {{ onepasswordRead .onepassword.bnc_darkscience_pass }}
