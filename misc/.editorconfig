# see http://editorconfig.org/

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
tab_width = 8
ident_size = 4
charset = utf-8
trim_trailing_whitespace = true

[*.{py,c,cpp,pl,rb,cc}]
indent_style = space
indent_size = 4
charset = utf-8

[*.{html,css}]
indent_style = space
indent_size = 2
charset = utf-8

[*.js]
indent_size = 2
continuation_indent_size = 4

[Makefile]
indent_style = tab

[*.{json,yml}]
indent_style = space
indent_size = 2
insert_final_newline = ignore
