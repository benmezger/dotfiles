# see http://editorconfig.org/

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
ident_size = 4

[*.{py,c,cpp,pl,rb,js}]
indent_style = space
indent_size = 4
charset = utf-8

[Makefile]
indent_style = tab

[*.{json,yml}]
indent_style = space
indent_size = 2
insert_final_newline = ignore
